extends layout.pug

include utils.pug

block content
	div(align='center')
		.review__title-show= show.title
		img(src=`${show.poster}` alt=`Poster for ${show.title}`)

	form(action=`/shows/${id}/reviews` method='post')
		div(class='form-group')
			input(type='hidden' name='_csrf' value=csrfToken)

			p: p
			label(for='content') Edit Review:
			br
			textarea(id='content' name='content' cols='75' rows='10') #{review.content}

			p
			label(for='userRating') User Ketchup Rating (10市 is best):
			br
			select(name='userRating' id='userRating')
				option(value=none selected disabled hidden) 市 Rate This Show!
				option(value=1) 1 市
				option(value=2) 2 市
				option(value=3) 3 市
				option(value=4) 4 市
				option(value=5) 5 市
				option(value=6) 6 市
				option(value=7) 7 市
				option(value=8) 8 市
				option(value=9) 9 市
				option(value=10) 10 市

		p
		div(class='py-4')
			button(type='submit').review-btn Edit Show Review
			p: a(href=`/shows/${id}`).review-btn Cancel
